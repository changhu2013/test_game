<div class="row">
    <div class="col-md-6 col-xs-6">
        <h2><strong><% if(user){ %><%=user.name%><% }%></strong></h2>
    </div>
    <div class="col-md-3 col-xs-3" style="margin-top:20px;font-size:10px;">
        <a href="#/manual">游戏规则</a>
    </div>
    <div class="col-md-3 col-xs-3" style="margin-top:20px;">
        <a href="#/honor"><button type="button" class="btn btn-primary">荣誉榜</button></a>
    </div>
</div>
<div class="row">
    <div class="col-md-6, col-xs-6">
        积分：<%=user.score || 0%>
    </div>
    <div class="col-md-6, col-xs-6">
        挑战：<%=user.battles || 0%>
    </div>
</div>
<center style="margin-top: 20px;">
    <a href="#/mybattles" ><button type="button" class="btn btn-default" style="width:200px;">我的挑战</button></a>
</center>
<div class="text-right" style="margin-top: 20px;">
    <button type="button" class="btn btn-default" ng-click="showTreeView();">打开题目</button>
</div>
<div class="container" ng-show="showQuestionTreeFlag">
    <div class="row">
        <h5>题目集</h5>
    </div>
    <div class="ztree panel">
        <div id="questioncategory"/></div>
</div>
<table class="table table-striped table-hover">
    <tr ng-repeat="store in questionstores">
        <td>
            <div class="row">
                <div class="col-md-2">
                    <a href="#/warzone/{{store.qsid}}">
                        <h4><strong>{{store.title}}</strong></h4>
                    </a>
                </div>
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-xs-6">
                            <p><strong>挑战积分:</strong>{{store.battleScore}}</p>
                        </div>
                        <div class="col-xs-6">
                            <p><strong>练习积分<strong>{{store.drillScore}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </td>
    </tr>
</table>
<div class="row" ng-show="showStoreMore">
    <p class="text-center" ng-click="moreStore()">更多</p>
</div>
</div>

<div class="container">
    <div class="row">
        <h5>最近战区</h5>
    </div>
    <table class="table table-striped table-hover">
        <tr ng-repeat="storeBattle in lastStoreBattles">
            <td>
                <div class="row">
                    <div class="col-md-2">
                        <h4><strong>{{storeBattle.store.title}}</strong></h4>
                    </div>
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-xs-6">
                                <p><strong>挑战积分:</strong>{{storeBattle.store.battleScore}}</p>
                            </div>
                            <div class="col-xs-6">
                                <p><strong>练习积分<strong>{{storeBattle.store.drillScore}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-xs-6">
                        <p><string>当前人数：</string>{{storeBattle.store.onLineUserNum}}</p>
                    </div>
                    <div class="col-md-6 col-xs-6">
                        <p><strong>时间：{{storeBattle.lastTime}}</strong></p>
                    </div>
                </div>
            </td>
        </tr>
    </table>
    <div class="row" ng-show="showBattleMore">
        <p class="text-center" ng-click="moreBattle()">更多</p>
    </div>
</div>