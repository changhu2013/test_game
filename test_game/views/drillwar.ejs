<input type="hidden" ng-init="user.sid = <%=user.sid%>"/>
<input type="hidden" ng-init="drid = '<%=bid%>'"/>
<div class="panel panel-default drill-wrap">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-2 col-xs-2">
                <button class="btn btn-default btn-sm btn-xs" type="button" ng-click="goOutDrill('<%=bid%>');">
                    撤退
                </button>
            </div>
            <div class="col-md-10 col-xs-10">
                <h3 class="panel-title text-center"><%=qstitle%>-练兵场</h3>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <section class="user-warp">
            <dl class="user-items">
                <dd class="user-item" data-user-id="<%=user.sid%>">
                    <div class="item-progress">
                        <div class="item-layout">
                            <div class="mask current"></div>
                            <p><%=user.name%><i></i></p>
                        </div>
                    </div>
                </dd>
            </dl>
        </section>
    </div>

    <div class="tool-wrap">
        <button class="btn btn-default btn-sm btn-xs" type="button">
            第{{questionIndex}}题/共<%=paperNum%>题
        </button>

        <!--<button class="btn btn-default btn-sm btn-xs" type="button">
            {{timer}}秒
        </button>-->

        <button class="btn btn-primary btn-sm btn-xs" type="button" ng-click="doReply();">
            提交
        </button>
    </div>

    <ul class="questions-items">
        <% qStore.forEach(function(question){%>
        <li class="questions-item">
            <dl class="list-group">
                <dt class="list-group-item">
                    <%=question.title%>
                </dt>
                <dd class="list-group-item">
                    <% for(var p in question.opts) {%>
                        <p class="questions-opt" data-_id="<%=question._id%>" data-answer="<%=p%>"><%=p%>、<%=question.opts[p]%></p>
                    <%}%>
                </dd>
            </dl>
        </li>
        <%})%>
    </ul>

    <div class="completeTips" ng-show="drillIsEnd">
        <div class="com-bd">
            <h3>{{drillResult}}</h3>
            <p>当前积分:<em ng-cloak>{{currentScore}}</em></p>
            <div class="btn-wp">
                <a class="ui button blue" ng-click="keepPractice()">继续练习</a>
                <a class="ui button blue" href="#">退出</a>
            </div>
        </div>
    </div>
</div>
