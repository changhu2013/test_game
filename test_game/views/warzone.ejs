<div class="page-header text-center">
      <h2><%=title%></h2>
    <a href="#/ranklist/<%=qs_id%>">排行榜</a>
    <a href="#/drillwar/<%=qs_id%>">练兵场</a>
    <a href="#/createBattle/<%=qs_id%>">建个战场</a>
</div>
<div class="warzone-bd">
    <ul class="warzone-items">
        <li class="warzone-item" ng-repeat="battle in battles">
            <div class="row">
                <a href="#battle/<%=qs_id%>/{{battle.bid}}">
                    <div class="col-md-3 col-xs-3 war-label">
                        <p><strong>战场{{$index + 1}}</strong></p>
                    </div>
                    <div class="col-md-9 col-xs-9 war-label">
                        <div class="col-md-4 col-xs-4 war-user" ng-repeat="user in battle.users">
                            {{user.name}}
                        </div>
                    </div>
                </a>
            </div>
            <div class="status-mask" ng-show="battle.battlestatus">{{battle.battleText}}</div>
        </li>
    </ul>
    <div class="row">
        <p class="text-center" ng-click="doMore()">更多</p>
    </div>
</div>